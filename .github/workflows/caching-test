name: CI with Cache ðŸ“¦

on: [push, workflow_dispatch]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      # 1. Caching Step
      - name: Cache Node Modules
        uses: actions/cache@v4
        id: cache-dependencies  # ID is needed to check the hit/miss result
        with:
          path: ~/.npm  # Directory to cache (e.g., node_modules or a global cache directory)
          # The key must be 'cache-19de7dc'
          key: cache-19de7dc

      # This is a placeholder step for installing dependencies that would use the cache
      - name: Install dependencies (Simulated)
        run: |
          echo "Installing dependencies..."
          # In a real workflow, this would be 'npm install' or similar
          mkdir -p ~/.npm

      # 2. Required step to echo the cache hit/miss result
      - name: prime-cache-19de7dc
        run: |
          echo "Cache status (Hit/Miss): ${{ steps.cache-dependencies.outputs.cache-hit }}"
