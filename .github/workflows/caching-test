name: CI with Cache ðŸ“¦

on: [push, workflow_dispatch]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      # 1. Cache dependencies step
      # The 'id' is crucial for checking the cache-hit output later.
      - name: Cache Node Modules
        uses: actions/cache@v4
        id: cache-action  # <-- Using 'cache-action' as the ID for clear reference
        with:
          path: ~/.npm  # Cache directory
          # Required key
          key: cache-19de7dc

      - name: Install dependencies (Simulated)
        run: |
          echo "Simulating dependency installation..."
          # This line ensures the directory exists so the cache saves something on the first run
          mkdir -p ~/.npm

      # 2. Required step: Name must be 'prime-cache-19de7dc'
      # It uses the 'id' from the caching step (cache-action) to get the result.
      - name: prime-cache-19de7dc
        run: |
          echo "Cache status (Hit/Miss): ${{ steps.cache-action.outputs.cache-hit }}"
